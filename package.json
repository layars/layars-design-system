{
    "name": "@layars/root",
    "version": "0.0.0",
    "type": "module",
    "private": true,
    "description": "Monorepo root for the Layars Design System",
    "scripts": {
        "lint": "eslint --ext .ts --ignore-path .gitignore .",
        "storybook": "pnpm run --parallel storybook:composition",
        "storybook:all": "pnpm -r storybook",
        "build": "pnpm -r --sort --no-bail build && pnpm build:successful",
        "build:successful": "pnpm node:ts .scripts/build-successful.ts",
        "test": "pnpm -r test && pnpm test:successful",
        "test:successful": "pnpm node:ts .scripts/test-successful.ts",
        "test:update": "pnpm -r test:update",
        "test:visual": "pnpm -r test:visual && pnpm test:successful",
        "test:visual:update": "pnpm -r test:visual:update",
        "node:ts": "node --import ./register.js",
        "postinstall": "pnpm workspaces:cache",
        "workspaces:cache": "pnpm node:ts utils/workspaces.js --cache-workspaces",
        "workspaces:nuke": "pnpm node:ts utils/nuke.js",
        "ci:install": "pnpm install --no-frozen-lockfile",
        "ci:version": "changeset version",
        "ci:publish": "pnpm --filter @layars/tokens publish --no-git-checks --dry-run"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:layars/layars-design-system.git"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@changesets/cli": "^2.27.1",
        "@eslint/js": "^8.55.0",
        "@playwright/test": "^1.40.1",
        "@storybook/addon-essentials": "7.6.4",
        "@storybook/addon-links": "7.6.4",
        "@storybook/builder-vite": "7.6.4",
        "@storybook/testing-library": "0.2.2",
        "@storybook/web-components": "7.6.4",
        "@storybook/web-components-vite": "7.6.4",
        "@types/fs-extra": "^11.0.4",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.4",
        "@typescript-eslint/eslint-plugin": "^6.13.2",
        "@typescript-eslint/parser": "^6.13.2",
        "chalk": "^5.3.0",
        "common-tags": "^1.8.2",
        "cors": "^2.8.5",
        "dedent-js": "^1.0.1",
        "eslint": "^8.54.0",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-prettier": "^5.0.1",
        "eslint-plugin-react": "^7.33.2",
        "fs-extra": "^11.1.1",
        "minimist": "^1.2.8",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.1.1",
        "remark-gfm": "^3.0.1",
        "rimraf": "^5.0.5",
        "storybook": "7.6.4",
        "strip-ansi": "^7.1.0",
        "ts-lit-plugin": "^2.0.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2",
        "vite": "5.0.7",
        "vitest": "1.0.4"
    }
}
