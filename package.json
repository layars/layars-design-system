{
    "name": "@layars/root",
    "version": "0.0.0",
    "type": "module",
    "private": true,
    "description": "Monorepo root for the Layars Design System",
    "scripts": {
        "lint": "eslint --ext .ts --ignore-path .gitignore .",
        "storybook": "pnpm run --parallel storybook:composition",
        "storybook:all": "pnpm -r storybook",
        "build": "pnpm -r build && pnpm build:successful",
        "build:successful": "pnpm ts:node .scripts/build-successful.ts",
        "test": "pnpm -r test && pnpm test:successful",
        "test:successful": "pnpm ts:node .scripts/test-successful.ts",
        "test:update": "pnpm -r test:update",
        "test:visual": "pnpm -r test:visual && pnpm test:successful",
        "test:visual:update": "pnpm -r test:visual:update",
        "ts:node": "ts-node --esm --",
        "postinstall": "pnpm workspaces:cache",
        "workspaces:cache": "pnpm ts:node utils/workspaces.js --cache-workspaces"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:layars/layars-design-system.git"
    },
    "workspaces": [
        "packages/*"
    ],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@eslint/js": "^8.54.0",
        "@playwright/test": "^1.40.0",
        "@storybook/addon-essentials": "7.5.3",
        "@storybook/addon-links": "7.5.3",
        "@storybook/builder-vite": "7.5.3",
        "@storybook/testing-library": "0.2.2",
        "@storybook/web-components": "7.5.3",
        "@storybook/web-components-vite": "7.5.3",
        "@types/fs-extra": "^11.0.4",
        "@types/jest": "^29.5.8",
        "@types/node": "^20.9.2",
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "@typescript-eslint/parser": "^5.62.0",
        "chalk": "^5.3.0",
        "common-tags": "^1.8.2",
        "cors": "^2.8.5",
        "eslint": "^8.54.0",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.33.2",
        "fs-extra": "^11.1.1",
        "minimist": "^1.2.8",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.8.8",
        "remark-gfm": "^3.0.1",
        "rimraf": "^5.0.5",
        "storybook": "7.5.3",
        "strip-ansi": "^7.1.0",
        "ts-lit-plugin": "^1.2.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2",
        "vite": "4.3.9",
        "vite-plugin-eslint": "^1.8.1",
        "vitest": "0.32.2"
    }
}
